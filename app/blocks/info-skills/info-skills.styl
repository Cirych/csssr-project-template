.info-skills
	margin-bottom 82px
	&__title
		margin-bottom 11px
		display block
	&__text
		font-size 14px
		line-height: 22px
		letter-spacing -0.05px
		margin-bottom 9px
		&:before
			float left
			content '*'
			font-size 36px
			margin-right 7px
			padding-bottom 30px
			padding-top 9px
	&__col
		clearfix()
	&__list
		float left
		width 33.33%
		&:first-child
			label
				padding-left 29px
		&:last-child
			padding-left 20px
	&__list-item
		padding-top 14px
	&__label
		display inline-block
		position relative
		font-size 21px
		letter-spacing -0.04px
	&__input
		display none
	&__input + label
		padding-left 26px
		&:before
			content ''
			position absolute
			left 0
			top -7px
			display inline-block
			sprite $checkbox_unchecked
	&__input:checked + label
		&:before
			content ''
			sprite $checkbox_checked
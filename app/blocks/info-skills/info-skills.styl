.info-skills
	margin-bottom 50px
	&__title
		margin-bottom 11px
		display block
	&__text
		font-size 14px
		line-height: 22px
		letter-spacing -0.05px
		margin-bottom 9px
		&:before
			float left
			content '*'
			font-size 36px
			margin-right 7px
			padding-bottom 30px
			padding-top 9px
	&__list
		column-count 3
		//-column-width 150px
		column-gap 1px
	&__list-item
		padding-top 14px
		&:nth-child(n+8):nth-child(-n+13)
			label
				padding-left 26px
		&:nth-child(n+14):nth-child(-n+18)
			label
				padding-left 26px
	&__label
		display inline-block
		position relative
		font-size 21px
		letter-spacing -0.1px
	&__input
		display none
	&__input + label
		padding-left 29px
		&:before
			content ''
			position absolute
			left 0
			top -7px
			display inline-block
			sprite $checkbox_unchecked
	&__input:checked + label
		&:before
			content ''
			sprite $checkbox_checked